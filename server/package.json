{
  "name": "unified-server",
  "version": "2.0.0",
  "description": "統一伺服器 - 服務主網站和請假系統",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "build": "chmod +x build.sh && ./build.sh",
    "build-simple": "tsc && cp src/line-bot.js dist/line-bot.js && cp -r data dist/ || echo 'Some files may not exist'",
    "watch": "tsc --watch",
    "init-disk": "node dist/scripts/init-persistent-disk.js",
    "init-disk-dev": "ts-node src/scripts/init-persistent-disk.ts",
    "force-init": "node ../force-init-disk.js",
    "postbuild": "npm run init-disk || npm run force-init || echo 'Disk initialization failed'"
  },
  "dependencies": {
    "@line/bot-sdk": "^8.4.1",
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/multer": "^1.4.7",
    "@types/node": "^20.5.0",
    "@types/nodemailer": "^7.0.9",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "csv-parser": "^3.0.0",
    "csv-writer": "^1.6.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^7.0.13",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6",
    "winston": "^3.19.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.4",
    "@types/supertest": "^2.0.12",
    "fast-check": "^3.15.0",
    "jest": "^29.6.2",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1"
  }
}
